local Players = game:GetService("Players")
local UIS = game:GetService("UserInputService")
local RunService = game:GetService("RunService")
local player = Players.LocalPlayer
local char = player.Character or player.CharacterAdded:Wait()
local humanoid = char:WaitForChild("Humanoid")
local hrp = char:WaitForChild("HumanoidRootPart")

-- Animation
local glideAnim = Instance.new("Animation")
glideAnim.AnimationId = "rbxassetid://100787184418636"
local glideTrack = humanoid:LoadAnimation(glideAnim)

-- State
local gliding = false
local wallStuck = false
local lastSpaceTap = 0
local spaceTapCount = 0
local flyVel

-- Wall detection
local function touchingWall()
    local ray = Ray.new(hrp.Position, hrp.CFrame.LookVector * 2)
    local hit = workspace:FindPartOnRay(ray, char)
    return hit and hit.CanCollide
end

-- Start gliding
local function startGlide()
    if gliding then return end
    if humanoid.FloorMaterial ~= Enum.Material.Air then return end

    gliding = true
    wallStuck = false
    humanoid:ChangeState(Enum.HumanoidStateType.Freefall)
    glideTrack:Play()

    flyVel = Instance.new("BodyVelocity", hrp)
    flyVel.MaxForce = Vector3.new(1e5, 1e5, 1e5)
    flyVel.P = 10000
    flyVel.Velocity = Vector3.zero
end

-- Stop gliding
local function stopGlide()
    gliding = false
    wallStuck = false
    if flyVel then flyVel:Destroy() end
    if glideTrack then glideTrack:Stop() end
end

-- Stick to wall
local function stickToWall()
    wallStuck = true
    gliding = false
    if flyVel then flyVel:Destroy() end
    if glideTrack then glideTrack:Stop() end
    humanoid.WalkSpeed = 0
end

-- Launch from wall
local function launchFromWall()
    wallStuck = false
    gliding = true
    glideTrack:Play()

    flyVel = Instance.new("BodyVelocity", hrp)
    flyVel.MaxForce = Vector3.new(1e5, 1e5, 1e5)
    flyVel.P = 10000

    local reverse = -hrp.CFrame.LookVector * 50
    local downward = Vector3.new(0, -2.5, 0)
    flyVel.Velocity = reverse + downward
end

-- Input detection
UIS.InputBegan:Connect(function(input, gpe)
    if gpe then return end
    if input.KeyCode == Enum.KeyCode.Space then
        local now = tick()
        if now - lastSpaceTap <= 1 then
            spaceTapCount += 1
        else
            spaceTapCount = 1
        end
        lastSpaceTap = now

        if wallStuck then
            launchFromWall()
        elseif spaceTapCount >= 2 then
            startGlide()
        end
    end
end)

-- Main loop
RunService.RenderStepped:Connect(function()
    if gliding then
        if humanoid.FloorMaterial ~= Enum.Material.Air then
            stopGlide()
            return
        end

        local moveDir = humanoid.MoveDirection
        local horizontal = moveDir.Magnitude > 0 and moveDir.Unit * 50 or Vector3.zero
        local downward = Vector3.new(0, -2.5, 0)
        if flyVel then
            flyVel.Velocity = horizontal + downward
        end

        if touchingWall() then
            stickToWall()
        end
    end
end)
