local function freezeAnimations(dt)
    animTimer = animTimer + dt
    if animTimer < FRAME_INTERVAL then return end
    animTimer = 0

    local tracks = humanoid:GetPlayingAnimationTracks()
    animFrameIndex = (animFrameIndex % 3) + 1

    for _, track in ipairs(tracks) do
        if track.Length > 0 then
            if not track.IsPlaying then
                track:Play()  -- Ensure it's playing to control TimePosition
            end
            local frames = getFrames(track)
            track.TimePosition = frames[animFrameIndex]
            track:AdjustSpeed(0)
        end
    end
end
