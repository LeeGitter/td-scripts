-- Mythic Lighting Loop (non-stacking, persistent override until respawn)

local Lighting = game:GetService("Lighting")
local Players = game:GetService("Players")
local player = Players.LocalPlayer

local alive = true

-- Stop loop on respawn
player.CharacterAdded:Connect(function()
    alive = false
end)

-- Utility: Get or create effect
local function getOrCreate(className, name)
    local existing = Lighting:FindFirstChild(name)
    if existing and existing:IsA(className) then return existing end
    local new = Instance.new(className)
    new.Name = name
    new.Parent = Lighting
    return new
end

-- Mythic lighting setter
local function applyLighting()
    local cc = getOrCreate("ColorCorrectionEffect", "MythicColorCorrection")
    local atmosphere = getOrCreate("Atmosphere", "MythicAtmosphere")
    local blur = getOrCreate("BlurEffect", "MythicBlur")

    while alive do
        -- Constant override
        cc.Brightness = 0.1
        cc.Contrast = 0
        cc.Saturation = -0.1
        cc.TintColor = Color3.fromRGB(235, 226, 216)

        atmosphere.Density = 0.5
        atmosphere.Haze = Color3.fromRGB(227, 205, 182)
        atmosphere.Glare = Color3.fromRGB(166, 180, 226)

        Lighting.ClockTime = 12
        Lighting.Brightness = 1
        Lighting.ExposureCompensation = 1
        Lighting.ShadowSoftness = 1
        Lighting.Ambient = Color3.fromRGB(70, 70, 70)
        Lighting.OutdoorAmbient = Color3.fromRGB(70, 70, 70)

        blur.Size = 7

        wait(1.5) -- Adjust for pacing
    end
end

-- Start loop
applyLighting()
